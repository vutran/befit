{
    "name": "befit",
    "version": "0.0.0",
    "description": "",
    "main": "dist/bundle.js",
    "scripts": {
        "build": "NODE_ENV=production webpack",
        "dev": "NODE_ENV=development webpack-dev-server --config webpack.config.js --inline",
        "prod": "NODE_ENV=production webpack-dev-server --config webpack.config.js --optimize-minimize",
        "format": "npm run format:js && npm run format:md",
        "format:js": "prettier --write '{*.js,*.json,{src,__tests__,typings}/**/*.ts{,x}}'",
        "format:md": "prettier --parser markdown --write '*.md'",
        "jest": "jest --coverage",
        "test": "npm run jest"
    },
    "author": "Vu Tran <vu@vu-tran.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:vutran/befit.git"
    },
    "dependencies": {
        "preact": "^8.2.7"
    },
    "devDependencies": {
        "@types/jest": "^22.0.1",
        "husky": "^0.14.3",
        "jest": "^22.1.4",
        "lint-staged": "^6.0.1",
        "prettier": "^1.10.2",
        "source-map-loader": "^0.2.3",
        "ts-jest": "^22.0.1",
        "ts-loader": "^3.3.0",
        "typescript": "^2.6.2",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.11.1"
    },
    "lint-staged": {
        "{*.js,{src,__tests__,typings}/**/*.ts{,x}}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
